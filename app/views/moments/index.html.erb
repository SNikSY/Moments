<h1>Moments</h1>

<% @moments.each do |moment| %>
  <div class="moment">
    <h2><%= link_to moment.user.username, moment_path(moment) %></h2> <!-- Ссылка на момент -->
    <p><%= truncate(moment.content, length: 100) %></p> <!-- Сокращённый текст момента -->
    <p><small>Создано: <%= moment.created_at.strftime('%d %B %Y, %H:%M') %></small></p>

    <div class="likes">
      <p>Лайки: <%= moment.likes.count %></p>
    </div>

    <div class="comments">
      <h3>Комментарии:</h3>
      <% moment.comments.limit(3).each do |comment| %> <!-- Показываем только три комментария -->
        <p><strong><%= comment.user.username %>:</strong> <%= comment.content %></p>
      <% end %>
      <%= link_to 'Читать дальше...', moment_path(moment) %> <!-- Ссылка для перехода к полному просмотру -->
    </div>
  </div>
  <hr>
<% end %>
